<Window x:Class="Vertex.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Vertex.App.Converters"
        Title="Vertex"
        Height="450"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">

    <Window.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>

        <!-- Card -->
        <Border Width="340"
                Padding="30"
                Background="White"
                CornerRadius="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.2"/>
            </Border.Effect>

            <StackPanel IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">

                <!-- Título -->
                <TextBlock Text="Bienvenido"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,25"
                           HorizontalAlignment="Center"/>

                <!-- Email -->
                <TextBlock Text="Correo"
                           FontSize="12"
                           Foreground="Gray"/>
                <TextBox Height="35"
                         Margin="0,5,0,15"
                         Padding="8"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Password -->
                <TextBlock Text="Contraseña"
                           FontSize="12"
                           Foreground="Gray"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Margin="0,5,0,25"
                             Padding="8"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Botón -->
                <Button Height="40"
                    Command="{Binding LoginCommand}"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="Iniciar sesión"/>
                            <Setter Property="Background" Value="#2563EB"/>
                            <Setter Property="Foreground" Value="White"/>

                            <Style.Triggers>
                                <!-- Cuando está cargando -->
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Content" Value="Cargando..."/>
                                    <Setter Property="Background" Value="#9CA3AF"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
