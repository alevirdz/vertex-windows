<Window x:Class="Vertex.App.Views.PlantillaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plantilla" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menú lateral -->
        <TreeView DockPanel.Dock="Left" Width="200" ItemsSource="{Binding MenuItems}" SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Label}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Contenido central -->
        <ContentControl x:Name="ContentArea" Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
