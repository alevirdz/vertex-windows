<Window x:Class="Vertex.App.Views.PlantillaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vertex"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Grid.Column="0"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,1,0">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <TextBlock Text="VERTEX"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#6366F1"
                           Margin="0,10"/>

                <!-- Usuario -->
                <StackPanel Grid.Row="1" Margin="0,30,0,20">
                    <TextBlock Text="{Binding User.Name}"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    <TextBlock Text="{Binding User.Email}"
                               Foreground="Gray"
                               FontSize="11"/>
                </StackPanel>

                <!-- Menú -->
                <TreeView Grid.Row="2"
                          ItemsSource="{Binding MenuItems}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          BorderThickness="0">

                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Margin" Value="0,5"/>
                            <Setter Property="Padding" Value="6"/>
                        </Style>
                    </TreeView.Resources>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Label}" FontSize="13"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <!-- Footer -->
                <TextBlock Grid.Row="3"
                           Text="Vertex © 2026"
                           FontSize="11"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,10"/>
            </Grid>
        </Border>


        <!-- ================= CONTENIDO PRINCIPAL ================= -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!-- HEADER SUPERIOR -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">

                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search -->
                    <TextBox Height="35"
                             Width="300"
                             VerticalAlignment="Center"
                             Padding="10"
                             Background="#F3F4F6"
                             BorderThickness="0"
                             Text="Buscar..."/>

                    <!-- Avatar -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <Ellipse Width="35"
                                 Height="35"
                                 Fill="#6366F1"
                                 Margin="0,0,10,0"/>

                        <TextBlock Text="{Binding User.Name}"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- AREA DINAMICA (NO TOCAR) -->
            <Border Grid.Row="1" Padding="20">
                <ContentControl x:Name="ContentArea"
                                Content="{Binding CurrentView}" />
            </Border>

        </Grid>
    </Grid>
</Window>
